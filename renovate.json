{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "baseBranchPatterns": [
    "main",
    "vertexai",
    "feat/openai"
  ],
  "platformAutomerge": true,
  "dependencyDashboard": true,
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"],
    "assignees": ["@me"],
    "schedule": ["at any time"],
    "groupName": null
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["major"],
      "automerge": false
    },
    {
      "description": "Always auto-merge security updates if CI was successful",
      "matchUpdateTypes": ["major", "minor", "patch"],
      "vulnerabilityAlerts": true,
      "automerge": true
    },
    {
      "groupName": "Next.js and React stack",
      "groupSlug": "nextjs-react-stack",
      "matchPackageNames": [
        "next",
        "react",
        "react-dom",
        "eslint-config-next"
      ],
      "matchPackagePatterns": [
        "^@next/",
        "^@types/react",
        "^@types/react-dom"
      ]
    },
    {
      "groupName": "Tailwind CSS stack",
      "groupSlug": "tailwindcss-stack",
      "matchPackageNames": [
        "tailwindcss",
        "postcss",
        "autoprefixer"
      ],
      "matchPackagePatterns": [
        "^@tailwindcss/"
      ]
    },
    {
      "groupName": "Docker image updates",
      "groupSlug": "docker-images",
      "matchDatasources": [
        "docker"
      ]
    }
  ],
  "dockerfile": {
    "enabled": true
  },
  "docker-compose": {
    "enabled": true
  }
}
